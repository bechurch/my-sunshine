{
  "short_name": "Sunlight.FYI",
  "name": "Sunlight.FYI",
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#26A5CA",
  "background_color": "#ffffff",


  "version" : "1.0",
  "manifest_version" : 2,
  "description" : "The idea is simple. Show exactly how much daylight is left down to the second. The hope is this gets more people away from their screens and out into the world. Enjoy!",

  "chrome_url_overrides" : {
    "newtab": "index.html"
  },

